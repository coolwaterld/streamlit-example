{
  "usecase": {
    "id": "uc01",
    "name": "CF example",
    "domain": "Production Data Management",
    "system_components": [
      {
        "id": "panel01",
        "name": "FC726",
        "component_type": "hardware",
        "short_description": "Modular, pre-assembled fire control panel for large applications.",
        "features": {
          "protocols": ["BACnet"],
          "data_types": ["event"]
        }
      },
      {
        "id": "panel02",
        "name": "FC18",
        "component_type": "hardware",
        "short_description": "fire alarm controller of Siemens Cerberus ",
        "features": {
          "protocols": ["FC18-BUS"],
          "data_types": ["event"]
        }
      },
      {
        "id": "panel03",
        "name": "EI-RN6020",
        "component_type": "hardware",
        "short_description": "fire alarm controller of GB26875.1-2011",
        "features": {
          "protocols": ["GB26875.1"],
          "data_types": ["event"]
        }
      },
      {
        "id": "cloud01",
        "name": "AIfire",
        "component_type": "cloud",
        "short_description": "https://www.aifire.cn/",
        "features": {
          "protocols": ["GB26875.1"],
          "data_types": ["event"]
        }
      }
    ],
    "requirements": [
      {
        "type": "cached_buffer",
        "value": 1000,
        "unit": "message"
      }
    ],
    "task_sequence": [
      {
        "order": 0,
        "id": "task01",
        "name": "Read datapoint from panel",
        "origin": [],
        "features": {
          "source": ["panel01"]
        }
      },
      {
        "order": 1,
        "id": "task02",
        "name": "Read datapoint from panel",
        "origin": [],
        "features": {
          "source": ["panel02"]
        }
      },
      {
        "order": 2,
        "id": "task03",
        "name": "Read datapoint from panel",
        "origin": [],
        "features": {
          "source": ["panel03"]
        }
      },
      {
        "order": 3,
        "id": "task04",
        "name": "Format package",
        "origin": ["task01", "task02"],
        "features": {
          "protocols": ["GB26875.1"]
        }
      },
      {
        "order": 4,
        "id": "task05",
        "name": "Compression",
        "origin": ["task03", "task04"],
        "features": {
          "algorithm": "zlib"
        }
      },
      {
        "order": 5,
        "id": "task06",
        "name": "Encryption",
        "origin": ["task05"],
        "features": {
          "algorithm": "AES128"
        }
      },
      {
        "order": 6,
        "id": "task07",
        "name": "Upload file to cloud",
        "origin": ["task06"],
        "features": {
          "target": ["cloud01"],
          "protocol": "Siemens over GB26875.1"
        }
      }
    ]
  }
}
