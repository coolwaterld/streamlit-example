{
  "usecase": {
    "id": "uc3831",
    "name": "joe's example",
    "domain": "Condition Monitoring & Process Control",
    "system_components": [
      {
        "id": "plc01",
        "name": "S7 PLC",
        "component_type": "hardware",
        "short_description": "S7 PLC for temperature sensor",
        "features": {
          "protocols": ["S7", "Profinet/IO"],
          "data_types": ["control", "time-series"]
        }
      },
      {
        "id": "plc02",
        "name": "Rockwell PLC",
        "component_type": "hardware",
        "short_description": "Rockwell PLC for motor control",
        "features": {
          "protocols": ["OPC-UA"],
          "data_types": ["control"]
        }
      },
      {
        "id": "sensor01",
        "name": "Basler camera",
        "component_type": "hardware",
        "short_description": "Basler camera for process monitoring",
        "features": {
          "protocols": ["GENICAM"],
          "data_types": ["image", "video"]
        }
      },
      {
        "id": "cloud01",
        "name": "AWS Cloud",
        "component_type": "cloud",
        "short_description": "AWS Cloud for data storage",
        "features": {
          "protocols": ["MQTT", "HTTP"],
          "data_types": ["image", "video"]
        }
      }
    ],
    "requirements": [
      {
        "type": "loop_time",
        "value": 10,
        "unit": "s"
      },
      {
        "type": "cpu_load",
        "value": 0.5,
        "unit": "cores"
      }
    ],
    "task_sequence": [
      {
        "order": 0,
        "id": "task01",
        "name": "Read datapoint from PLC",
        "origin": [],
        "features": {
          "source": ["plc01"]
        }
      },
      {
        "order": 1,
        "id": "task02",
        "name": "Process time-series data",
        "origin": ["task01"],
        "features": {
          "protocol": "MQTT"
        }
      },
      {
        "order": 2,
        "id": "task03",
        "name": "Visualize data trend",
        "origin": ["task02"],
        "features": {
          "visualization": "line-chart"
        }
      },
      {
        "order": 3,
        "id": "task04",
        "name": "Trigger image acquisition",
        "origin": ["task02"],
        "features": {
          "target": ["sensor01"],
          "trigger": ["software"]
        }
      },
      {
        "order": 4,
        "id": "task05",
        "name": "Write data to file",
        "origin": ["task04"],
        "features": {
          "data_type": "image",
          "format": "JPEG"
        }
      },
      {
        "order": 5,
        "id": "task06",
        "name": "Upload file to cloud",
        "origin": ["task05"],
        "features": {
          "target": ["cloud01"],
          "protocol": "HTTP",
          "format": "JPEG"
        }
      }
    ]
  }
}
